@model ProfileFormViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <hr />
    @* <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div> *@
    <div class="form-floating mb-3">
        <input asp-for="FirstName" class="form-control" maxlength="100" autocomplete="FirstName" aria-required="true" placeholder="alice" />
        <label asp-for="FirstName">FirstName</label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="LastName" class="form-control" maxlength="100" autocomplete="LastName" aria-required="true" placeholder="jack" />
        <label asp-for="LastName">LastName</label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" autocomplete="Email" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Email">Email</label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>  
    <div class="form-floating mb-3">
        <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example" />
        <label asp-for="UserName">UserName</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="AccountStatus" class="form-control" autocomplete="AccountStatus" aria-required="true" placeholder="Active" />
        <label asp-for="AccountStatus">AccountStatus</label>
        <span asp-validation-for="AccountStatus" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary d-block mt-4">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}